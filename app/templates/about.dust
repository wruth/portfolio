{>page-header name="about" /}

{#.}
    <div class="row leading-2">
        {@if cond="{$idx} == 0"}
            <aside class="col-3 prefix-1">
                <div class="avatar"></div>
            </aside>
        {/if}
        <section class="about-section col-7 {@if cond="{$idx} > 0"}prefix-4{/if} suffix-1">
            <h2>{title}</h2>
            <p>{body|s}</p>
        </section>
    </div>
{/.}
